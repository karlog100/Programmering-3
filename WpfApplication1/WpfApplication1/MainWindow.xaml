<Window x:Class="WpfApplication1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" Height="350" Width="525" Title="Karlogs mail client">
    <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="0,0,0.4,-0.2" >
        <Grid.RowDefinitions>
            <RowDefinition Height="25*"/>
            <RowDefinition Height="296*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>

            <ColumnDefinition MinWidth="40" MaxWidth="150"/>

            <ColumnDefinition/>



        </Grid.ColumnDefinitions>

        <Menu Name="menuPanel" Height="26" Background="Green" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Grid.ColumnSpan="2">
            <MenuItem x:Name="menuFile" Header="File" Width="41"/>

                <MenuItem x:Name="menuSend" Header="Send" Width="52"/>
            <MenuItem x:Name="menuRecive" Header="Recive" HorizontalAlignment="Stretch" Width="64" Height="23"/>
            <MenuItem x:Name="menuSendAndRecive" Header="Send and recive all" Width="127"/>
            <MenuItem x:Name="menuAbout" Header="About"/>
        </Menu>

        <GridSplitter HorizontalAlignment="Left" Width="5" ShowsPreview="True" Grid.Column="1" Grid.Row="2"/>
        <TreeView HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Background="LightPink" Margin="0,0,0.2,0" Grid.Row="2" />
    </Grid>


</Window>
